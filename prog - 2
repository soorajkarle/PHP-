<?php
 


<title>Date function</title>
 
$afternon="Good afternoon!!";
$evening="Go evening!!";
$late="Working late!!";
$morning="Good morning!!";
$friday="get ready for the weekend";
$current_time=date('F');
$current_day=date('l'); echo$current_time; echo$current_day;
if($current_time>=12&&$current_time<=16)
{
echo$afternoon;
}
elseif($current_time>=17&&$current_time<=24)
{
echo$evening;
}
elseif($current_time>=1&&$current_time<=5)
{
echo$late;
}
elseif($current_time>=6&&$current_time<=11)
{
echo$morning;
}
if($current_day=="friday")
{
echo$friday;
}
?>
